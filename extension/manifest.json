{
  "manifest_version": 3,
  "name": "PF2e Lite Companion",
  "version": "0.1.0",
  "description": "Annotates Archives of Nethys with PF2e Lite compatibility info and rule modifications.",
  "permissions": ["storage"],
  "host_permissions": ["https://2e.aonprd.com/*"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://2e.aonprd.com/*"],
      "js": ["dist/content/annotator.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["data/*.json"],
      "matches": ["https://2e.aonprd.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
